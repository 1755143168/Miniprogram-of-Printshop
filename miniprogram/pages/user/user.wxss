.header {
  position: relative;
  height:300rpx;
  display: flex;
  align-items: center;
  background: linear-gradient(to bottom, #6495ED,#ADD8E6);
}

.bg_ware {
  position: absolute;
  left: 0;
  bottom: -2rpx;
  width: 100%;
  mix-blend-mode: screen;
  height: 150rpx;
}
/*头像框*/
.headportrait{
  position: absolute;
  height: 160rpx;
  width: 160rpx;
  left: 100rpx;
  border-radius: 50%;
  background-color: #ffffff;
}
.headportrait_image{
  width: 100%;
  height: 100%;
  border-radius: 50%;
}
/************登录按钮****************/
.loginbutton{
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100rpx;
  width: 80rpx;
  border-radius: 25rpx;
  box-shadow: 0rpx 0rpx 30rpx#696969;
}
/***************用户名**************************/
.headportrait_txt{
  position: absolute;
  left: 280rpx;
  display: flex;  
  flex-direction: column;
}
.name{
  font-size: 70rpx;
}
.address{
  font-size: 25rpx;
}


/******************宫格**********************/
.father{
  height: 600rpx;
  display: flex;
  flex-wrap: wrap;/*换行*/
  margin: 50rpx 15rpx 50rpx 15rpx;/*上右下左*/
}
.child{
  width: 45%;
  height: 220rpx;
  margin: 10rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 20rpx;
  background: radial-gradient(circle,#87CEFA,80%,#ADD8E6);/*渐变*/
  box-shadow: 12rpx 12rpx 30rpx #6495ED;
  background-color: 	#6495ED;
  margin: 20rpx auto;
  position:relative;
}
.child_navigator{
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.childimage{
  width: 100rpx;
  height: 100rpx;
  margin: 0 30rpx 0 0;
}




